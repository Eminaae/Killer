package ba.bitcamp.week11.day4.lectures;

import java.util.Date;

public class PrimeCounter {

	private int start;
	private int end;
	private int count;
	
	public PrimeCounter(int start, int end){
		this.start = start;
		this.end = end;
		this.count = 0;
	}
	
	public void countPrimes(){
		for(int i = 0; i < end; i++){
			if(isPrime(i))
				count++;
		}
	}
	private boolean isPrime(int number){
		for(int i = 2; i < number/2; i++)
			if(number % i == 0)
				return false;
		return true;
	}
	
	public int getCount(){
		return count;
	}
	
	
	public static void main(String[] args) {
		Date start = new Date();
		PrimeCounter pc = new PrimeCounter(1, 3000000000);
		pc.countPrimes();
		System.out.println("Primes count: " + pc.getCount());
		
		Date end = new Date();
		long timeLapse = (end.getTime() - start.getTime())/1000;
		System.out.println("Times: " + timeLapse);
		System.out.println("End of main");

	}

}
