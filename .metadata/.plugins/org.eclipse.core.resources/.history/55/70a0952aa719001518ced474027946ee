import java.util.Arrays;


public abstract class Computer {
	public static final int MAC_ADDRESS = 12;
	public String name;
	public MACAddress mac;
	
	/**
	 * Constructor
	 * @param name
	 * @param mac
	 */
	public Computer(String name, char[] mac) {
		super();
		this.name = name;
		this.mac = mac;
	}
	
	public String getName() {
		return name;
	}
	
	public void setName(String name) {
		this.name = name;
	}
	
	public char[] getMac() {
			
		return mac;
	}
	
	public void setMac(char[] mac) {
		this.mac = mac;
	}
	
	class MACAddress {
		private char[] mac;
		
		public (char[] mac) {
			this.mac = mac;
		}
	}
	
	

	@Override
	public boolean equals(Object obj) {
		if (this == obj) {
			return true;
		}
		if (obj == null) {
			return false;
		}
		if (!(obj instanceof Computer)) {
			return false;
		}
		Computer other = (Computer) obj;
		if (!Arrays.equals(mac, other.mac)) {
			return false;
		}
		if (name == null) {
			if (other.name != null) {
				return false;
			}
		} else if (!name.equals(other.name)) {
			return false;
		}
		return true;
	}

	@Override
	public String toString() {
		String s = "";
		s += "Computer name: " + name + "," + "MAC: " + Arrays.toString(mac);
		return s;
	
	}
}
