package ba.bitcamp.week11.day4.lectures;

public class PrimeCounter {

	private int start;
	private int end;
	private int count;
	
	public PrimeCounter(int start, int end){
		this.start = start;
		this.end = end;
		this.count = 0;
	}
	
	public void countPrimes(){
		for(int i = 0; i < end; i++){
			if(isPrime(i))
				count++;
		}
	}
	private boolean isPrime(int number){
		for(int i = 2; i < number/2; i++)
			if(number % i == 0)
				return false;
		return true;
	}
	
	public int getCount(){
		return count;
	}
	
	
	public static void main(String[] args) {
		PrimeCounter pc = new PrimeCounter(1, 20);
		pc.countPrimes();
		System.out.println("Primes count" + pc.getCount());

	}

}
